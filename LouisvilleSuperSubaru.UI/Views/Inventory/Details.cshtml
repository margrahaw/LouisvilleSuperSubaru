@model LouisvilleSuperSubaru.Models.Queries.VehicleItem

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col">
        <h2>Vehicle Details</h2>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <p><strong>@Model.Year @Model.MakeName @Model.ModelName</strong></p>
    </div>
    <div class="col-12 col-md-4 col-lg-2">
        <img src="@Url.Content("~/Images/" + Model.Picture)" alt="Alternate Text" width="150" />
    </div>
    <div class="col-12 col-md-8 col-lg-10">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-4">
                <table class="table">
                    <tr>
                        <td><strong>Body Style:</strong></td>
                        <td>@Model.VehicleTypeName</td>
                    </tr>
                    <tr>
                        <td><strong>Transmission:</strong></td>
                        <td>@Model.TransmissionTypeName</td>
                    </tr>
                    <tr>
                        <td><strong>Color:</strong></td>
                        <td>@Model.CarColorName</td>
                    </tr>
                </table>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <table class="table">
                    <tr>
                        <td><strong>Interior:</strong></td>
                        <td>@Model.InteriorColorName</td>
                    </tr>
                    <tr>
                        <td><strong>Mileage:</strong></td>
                        <td>@Model.Mileage</td>
                    </tr>
                    <tr>
                        <td><strong>VIN #:</strong></td>
                        <td>@Model.VIN</td>
                    </tr>
                </table>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <table class="table">
                    <tr>
                        <td><strong>Sale Price:</strong></td>
                        <td>@Model.SalesPrice.ToString("c")</td>
                    </tr>
                    <tr>
                        <td><strong>MSRP:</strong></td>
                        <td>@Model.MSRP.ToString("c")</td>
                    </tr>
                </table>
            </div>
            <div class="col-12">
                <table class="table">
                    <tr>
                        <td><strong>Description:</strong></td>
                        <td>@Model.Description</td>
                    </tr>
                </table>
                @Html.ActionLink("Contact Us", "Contact", "Home", null, new { @class="btn" })
            </div>
        </div>
    </div>
</div>


