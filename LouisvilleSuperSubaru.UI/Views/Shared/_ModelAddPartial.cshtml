@model LouisvilleSuperSubaru.UI.Models.ModelAddViewModel

<div class="row">
    @using (Html.BeginForm("AddModel", "Sales", FormMethod.Post, new { enctrype = "multipart/form-data", @class="form-row" }))
    {
        <div class="form-group">
            <label>New Model</label>
            @Html.TextBoxFor(m => m.Model, new {  @class = "form-control"})
        </div>
        <div class="form-group">
            <label>Make</label>
            @Html.DropDownListFor(m => m.Model.MakeID, Model.Make, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Save</button>
        </div>
    }
</div>
